#imports 
from tkinter import *
from PIL import ImageTk,Image
#end imports
window=Tk()#mainloop

#window size
window.geometry("811x601")

#spacing and logo
logo=Canvas(window, width=100, height=100)
logo.grid(row=0, column=1, sticky=W)
blackbook=PhotoImage(file=""#add image directory here when loading finalised product it will fix the seemingly empty space.
)
logo.create_image(80, 80, image=blackbook)

#seperators
#seperates the text module "yourcontacthere" using a black border
seperatorone=Frame(window, bg="white", width=603, height=50, borderwidth=3, relief=SOLID)
seperatorone.grid(row=1, column=1)

#your contact here text
yourcontacthere=Label(window, text="Your contacts:", bg="white", font=("Helvetica", 19))
yourcontacthere.grid(row=1, column=1, sticky=S, pady=10)

#add a new contact with this code
newcontact=Button(window, text="Add new contact", height=9, width=25, borderwidth=2, relief=SOLID)
newcontact.grid(row=2, column=3, sticky=N)

#view existing contacts with this code
viewcontact=Button(window, text="view details on selected contact", height=9, width=25, borderwidth=2, relief=SOLID)
viewcontact.grid(row=2, column=3, sticky=E)

#edit existing contacts with this code
editcontact=Button(window, text="edit selected contact", height=9, width=25, borderwidth=2, relief=SOLID)
editcontact.grid(row=2, column=3, sticky=S)
#edit existing contacts with this code

editcontact=Button(window, text="exit", height=3, width=25, borderwidth=2, relief=SOLID)
editcontact.grid(row=1, column=3, sticky=S)

#your contact here


#arbitrary fill data for list
waste=[1, 2, 3]

#List
contactlist=Listbox(window, bd=2, height=27, width=100, borderwidth=3, relief=SOLID)
contactlist.grid(row=2, column=1, sticky=N)
scrollbar=Scrollbar(window)
contactlist.config(yscrollcommand=scrollbar.set)
scrollbar.config(command=contactlist.yview)
scrollbar.grid(row=2, column=0)
window.mainloop()
